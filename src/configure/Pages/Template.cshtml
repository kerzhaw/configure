@page
@model TemplateModel

<h1>@Model.TemplateName</h1>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="SubjectPart"></label>
        <input class="form-control" asp-for="SubjectPart"></input>
        <span asp-validation-for="SubjectPart" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HtmlPart"></label>
        <textarea class="form-control" asp-for="HtmlPart"></textarea>
        <span asp-validation-for="HtmlPart"></span>
    </div>
    <div class="form-group">
        <label asp-for="TextPart"></label>
        <textarea class="form-control" asp-for="TextPart"></textarea>
        <span asp-validation-for="TextPart"></span>
    </div>
    <button type="submit">Save</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}